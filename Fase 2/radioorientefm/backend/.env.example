# Django Configuration
# IMPORTANTE: Genera una nueva SECRET_KEY ejecutando: python generate_secret_key.py
# NUNCA uses la clave por defecto en producción
SECRET_KEY=your-secret-key-here-change-in-production

# En producción, SIEMPRE debe ser False
DEBUG=True

# CORS Configuration (Production)
# Lista de orígenes permitidos separados por coma, ej: http://localhost:3000,https://tudominio.com
ALLOWED_ORIGINS=http://localhost:3000

# Dashboard URL
DASHBOARD_URL=http://localhost:8000/dashboard/

# Email Configuration (para recuperación de contraseña)
# Opciones: 'django.core.mail.backends.smtp.EmailBackend' (producción) o 'django.core.mail.backends.console.EmailBackend' (desarrollo)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
# Para usar Gmail, necesitas crear una "App Password" en https://myaccount.google.com/apppasswords
EMAIL_HOST_USER=tu-email@gmail.com
EMAIL_HOST_PASSWORD=tu-app-password-aqui
DEFAULT_FROM_EMAIL=tu-email@gmail.com

# Frontend URL (usado en emails de recuperación)
FRONTEND_URL=http://localhost:3000

# --- Configuración de la Base de Datos ---
# Pon esto en False para usar PostgreSQL (Supabase)
USE_SQLITE=False

# ¡IMPORTANTE! Usa esta URL para crear las tablas por primera vez (manage.py migrate)
# La encuentras en Supabase > Project Settings > Database > Connection string > URI
# Formato: postgresql://postgres.[PROJECT_ID]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres
DATABASE_URL=postgresql://user:password@host:port/database
